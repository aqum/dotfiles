// Place your settings in this file to overwrite the default settings
{
    "editor.fontSize": 12,
    "editor.lineNumbers": "relative",
    "workbench.colorTheme": "Solarized Dark",
    "keyboard.dispatch": "keyCode",
    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.useCtrlKeys": true,
    "window.zoomLevel": 0,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "vim.disableExtension": false,
    "files.insertFinalNewline": true,
    "editor.rulers": [
        80,
        120
    ],
    "window.menuBarVisibility": "toggle",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "git.autofetch": true,
    "workbench.statusBar.feedback.visible": false,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": true,
    "prettier.singleQuote": true,
    "breadcrumbs.enabled": true,
    "javascript.preferences.quoteStyle": "single",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.titleBarStyle": "native",
    "editor.fontFamily": "Hack,  'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "vim.easymotionMarkerFontFamily": "Hack",
    "vim.easymotionMarkerFontSize": "12",
    "[dockerfile]": {
        "editor.defaultFormatter": "PeterJausovec.vscode-docker"
    },
    "showMusicMetrics": false,
    "showGitMetrics": false,
    "showWeeklyRanking": false,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.tree.renderIndentGuides": "always",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.startupEditor": "newUntitledFile",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "html.mirrorCursorOnMatchingTag": false
}
